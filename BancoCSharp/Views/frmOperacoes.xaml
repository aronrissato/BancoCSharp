        <Button x:Name="btnDeposito" Content="Depósito" HorizontalAlignment="Left" Margin="36,276,0,0" VerticalAlignment="Top" Width="202" Height="50" Click="BtnDeposito_Click"/>
        <Button x:Name="btnBoleto" Content="Boletos" HorizontalAlignment="Left" Margin="36,386,0,0" VerticalAlignment="Top" Width="202" Height="50" Click="BtnBoleto_Click"/>
        <Button x:Name="btnTransferencia" Content="Transferência" HorizontalAlignment="Left" Margin="36,332,0,0" VerticalAlignment="Top" Width="202" Height="50" Click="BtnTransferencia_Click"/>
        <Button x:Name="btnExtrato" Content="Extrato" HorizontalAlignment="Left" Margin="36,441,0,0" VerticalAlignment="Top" Width="202" Height="50"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="50" Margin="238,222,0,0" VerticalAlignment="Top" Width="322">
