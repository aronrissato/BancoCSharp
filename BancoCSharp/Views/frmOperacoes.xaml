        <TextBox x:Name="txtNovaConta" HorizontalAlignment="Left" Height="24" Margin="412,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239"/>
        <Button x:Name="btnSalvarConta" Content="Salvar" HorizontalAlignment="Left" Margin="656,98,0,0" VerticalAlignment="Top" Width="75" Height="24" Click="BtnSalvarConta_Click"/>

    </Grid>
</Window>
